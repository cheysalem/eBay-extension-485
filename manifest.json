{
    "name": "eBay Blacklist",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "mainTab.html",
      "default_icon": "images/eBlocker.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "js": ["content.js"],
        "matches": [
          "*://*.ebay.com/*"
        ]
      }
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus",
      "storage"
    ],
    "options_ui":
    {
      "page": "options.html",
      "open_in_tab": false
    }
}